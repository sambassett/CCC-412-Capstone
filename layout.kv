BoxLayout:
    canvas:
        Color:
            rgb: .5,0,.5
    orientation: 'vertical'
    GridLayout:
        cols: 2
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 1'
			BoxLayout:
				PlayButton1:
				CheckBox1:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 2'
			BoxLayout:
				PlayButton2:
				CheckBox2:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 3'
			BoxLayout:
				PlayButton3:
				CheckBox3:
		BoxLayout:
			orientation: 'vertical'
			Label:
