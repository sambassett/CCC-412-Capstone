		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 5'
			BoxLayout:
				PlayButton5:
				CheckBox5:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 6'
			BoxLayout:
				PlayButton6:
				CheckBox6:
    BoxLayout:
        Button:
            text: 'Generate From Selection'
        Button:
            text: 'Save/Export Selection'
        Button:
            text: 'Test Instrument'

<PlayButton1@Button>:                       #Inherits from button class
    id: play_button_child
    on_press: app.play_sound(0)
    Label:
        text: 'Play'
        center_x: self.parent.center_x
        center_y: self.parent.center_y

<CheckBox1@CheckBox>:
    id: check_box
    on_active: app.on_checkbox_active(self.active, 0)

