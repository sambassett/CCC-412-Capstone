BoxLayout:
    canvas:
        Color:
            rgb: .5,0,.5
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Upload From File [NYI]'
        Label:
            text: 'Current Sound [NYI]'
        Image:
            source: 'Images/Wilhelm Scream.png'
    GridLayout:
        cols: 2
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 1'
			BoxLayout:
				PlayButton1:
				GenerateButton1:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 2'
			BoxLayout:
				PlayButton2:
				GenerateButton2:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 3'
			BoxLayout:
				PlayButton3:
				GenerateButton3:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 4'
			BoxLayout:
				PlayButton4:
				GenerateButton4:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 5'
			BoxLayout:
				PlayButton5:
				GenerateButton5:
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Sound 6'
			BoxLayout:
				PlayButton6:
				GenerateButton6:
    BoxLayout:
        Button:
            text: 'Generate From Selection [NYI]'
        Button:
            text: 'Save/Export Selection [NYI]'
        Button:
            text: 'Test Instrument [NYI]'

<PlayButton1@Button>:                       #Inherits from button class
    id: play_button_child
    on_press: app.play_sound(0)
    Label:
        text: 'Play'
        center_x: self.parent.center_x
        center_y: self.parent.center_y

        #on_press: root.play_sound(0)
		
<GenerateButton1@Button>:                       #Inherits from button class
    id: generate_button_child
    on_press: app.newGeneration(0)
    Label:
        text: 'Generate'
        center_x: self.parent.center_x
        center_y: self.parent.center_y

        #on_press: root.newGeneration(0)

